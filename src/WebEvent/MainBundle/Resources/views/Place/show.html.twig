{% extends 'WebEventFrontOfficeBundle::layout-front.html.twig' %}
{% block container %}


    <!-- content-3 -->
    <section class="content-3">
        <div>
            <div class="container">
                <div class="row">
                    <div class="col-sm-6 aligment">
                        <h1>{{ entity.name }}</h1>

                        <div>{{ entity.description }}</div>
                        <div class="row">
                            <div class="social-btns pull-left col-xs-12">
                                {% if entity.facebook %}
                                    <a href="{{ entity.facebook }}">
                                        <div class="fui-facebook"></div>
                                    </a>
                                {% endif %}
                                {% if entity.twitter %}
                                    <a href="{{ entity.twitter }}">
                                        <div class="fui-twitter"></div>
                                    </a>
                                {% endif %}
                                {% if entity.website %}
                                    <a href="{{ entity.website }}">
                                        <div class="fui-link"></div>
                                    </a>
                                {% endif %}
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-xs-12">
                                <p>{{ entity.address.address }}</p>

                                <p>{{ entity.address.cp }} {{ entity.address.ville }}</p>
                            </div>
                        </div>
                        <a href="{{ path('web_event_main_place_change', { 'city_selected' : entity.address.ville }) }}" alt="Revenir aux lieux"> Retourner Ã  liste des
                            lieux</a>
                    </div>

                    <div class="col-sm-6">
                        <div class="img">
                            <img src="#" alt="">
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- footer-9 -->
    <section class="footer-9-map">
        <iframe width="100%" height="100%" frameborder="0" scrolling="no" marginheight="0" marginwidth="0"
                src="https://maps.google.com/?ie=UTF8&amp;t=m&amp;ll={{ entity.address.latitude }},{{ entity.address.longitude }}&amp;spn=0.04554,0.072956&amp;z=15&amp;q={{ entity.address.latitude }}+{{ entity.address.longitude }}&amp;output=embed"></iframe>
    </section>
{% endblock %}
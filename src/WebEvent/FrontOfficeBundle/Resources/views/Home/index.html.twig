                            {#<a href="#" class="overlay">#}
                                {#{#<span class="fui-cmd"></span>#}
                                {#<span href="#"#}
                                      {#class="text-center name color-belize-hole">{{ ev.name }}</span>#}
                            {#</a>#}
                        {#</div>#}
                    {#</div>#}
                {#</div>#}
                {#{% if loop.index%3 == 0 or loop.last and not(loop.first) %}#}

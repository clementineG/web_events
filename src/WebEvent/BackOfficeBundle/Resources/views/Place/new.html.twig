            </div>

            <div class="form-group col-xs-12">
                {{ form_label(form.address, "Ville*", {'label_attr': {'class': 'col-sm-12 control-label'}}) }}
                {{ form_errors(form.address) }}
                <div class="col-sm-8">{{ form_widget(form.address.ville, {'attr': {'class': 'form-control'}}) }}</div>
            </div>
